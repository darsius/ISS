      <Button fx:id="logInBtn" layoutX="173.0" layoutY="248.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="45.0" prefWidth="315.0" text="Log In">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Label layoutX="143.0" layoutY="343.0" text="Don't have an account?">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Button fx:id="signUpBtn" layoutX="320.0" layoutY="336.0" mnemonicParsing="false" onAction="#handleSignUp" text="Sign up">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
