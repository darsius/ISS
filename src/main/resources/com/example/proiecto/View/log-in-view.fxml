<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #9FFDE1;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proiecto.Controller.LogInController">
   <children>
      <Label layoutX="125.0" layoutY="174.0" text="Username">
         <font>
            <Font name="DIN Alternate Bold" size="20.0" />
         </font>
      </Label>
      <Label layoutX="125.0" layoutY="227.0" text="Password">
         <font>
            <Font name="DIN Alternate Bold" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="usernameTF" layoutX="232.0" layoutY="174.0" prefHeight="26.0" prefWidth="239.0" />
      <Button fx:id="logInBtn" layoutX="143.0" layoutY="291.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="45.0" prefWidth="315.0" style="-fx-background-color: #049E99;" text="Log In" textFill="WHITE">
         <font>
            <Font name="DIN Alternate Bold" size="24.0" />
         </font>
      </Button>
      <Label layoutX="142.0" layoutY="396.0" text="Don't have an account?">
         <font>
            <Font name="DIN Alternate Bold" size="16.0" />
         </font>
      </Label>
      <Button fx:id="signUpBtn" layoutX="320.0" layoutY="389.0" mnemonicParsing="false" onAction="#handleSignUp" style="-fx-background-color: #049E99;" text="Sign up" textFill="WHITE" underline="true">
         <font>
            <Font name="DIN Alternate Bold" size="18.0" />
         </font>
      </Button>
      <ImageView fitHeight="150.0" fitWidth="205.0" layoutX="225.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../Images/logo.png" />
         </image>
      </ImageView>
      <PasswordField fx:id="passwordTF" layoutX="232.0" layoutY="227.0" prefHeight="26.0" prefWidth="239.0" />
   </children>
</AnchorPane>
